<p id="notice"><%= notice %></p>

<h1>Listing Snaps</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Photo</th>
      <th>Content</th>
      <th>Reception time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snaps.each do |snap| %>
      <tr>
        <td><%= snap.user_id %></td>
        <td><%= snap.photo %></td>
        <td><%= snap.content %></td>
        <td><%= snap.reception_time %></td>
        <td><%= link_to 'Show', snap %></td>
        <td><%= link_to 'Edit', edit_snap_path(snap) %></td>
        <td><%= link_to 'Destroy', snap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

